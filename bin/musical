#!/usr/bin/env ruby

require 'musical'
include Musical

Musical.setup

dvd_options = {
  title: Musical.configuration.title,
  artist: Musical.configuration.artist,
  year: Musical.configuration.year,
  path: Musical.configuration.path
}
progress_format = Musical.configuration.progress_format

